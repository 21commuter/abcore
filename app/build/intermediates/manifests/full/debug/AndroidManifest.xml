<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenaddress.abcore"
    android:versionCode="21"
    android:versionName="0.21" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.greenaddress.abcore.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.greenaddress.abcore.DownloadInstallCoreIntentService"
            android:exported="false" />
        <service
            android:name="com.greenaddress.abcore.RPCIntentService"
            android:exported="false" />
        <service
            android:name="com.greenaddress.abcore.ABCoreService"
            android:exported="false" />

        <activity android:name="com.greenaddress.abcore.BitcoinConfEditActivity" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.greenaddress.abcore.BitcoinConfEditActivity" />
            </intent-filter>
        </activity>
        <activity android:name="com.greenaddress.abcore.AboutActivity" >
        </activity>
        <activity
            android:name="com.greenaddress.abcore.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.greenaddress.abcore.PeerActivity"
            android:label="@string/title_activity_peer"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.greenaddress.abcore.ProgressActivity"
            android:label="@string/title_activity_progress"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name="com.greenaddress.abcore.LogActivity" >
        </activity>
        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity" />

        <meta-data
            android:name="string"
            android:value="string" />
    </application>

</manifest>